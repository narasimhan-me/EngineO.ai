# Test environment configuration
# This file is loaded when NODE_ENV=test

# Database - Use the same Neon database for now (tests clean up after themselves)
# For isolation, consider creating a separate test database branch in Neon
DATABASE_URL="postgresql://test_user:test_password@localhost:5432/test_db?sslmode=require"

# JWT Configuration
JWT_SECRET=test-jwt-secret-for-e2e-tests
JWT_EXPIRATION=1h

# Redis - Required for BullMQ queues
# For local testing, use a local Redis instance or mock
# If not available, queue operations will fail but other tests may still work
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=engineo_test

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Captcha - Disabled in tests via CaptchaServiceStub
CAPTCHA_PROVIDER=turnstile
CAPTCHA_SECRET_KEY=test-captcha-secret

# Shopify OAuth (mock values for tests)
SHOPIFY_API_KEY=test_shopify_api_key_placeholder
SHOPIFY_API_SECRET=test_shopify_api_secret_placeholder
SHOPIFY_APP_URL=http://localhost:3001
SHOPIFY_SCOPES=read_products,write_products,read_themes

# AI Configuration (not used in most e2e tests)
AI_PROVIDER=gemini
AI_API_KEY=test_ai_api_key_placeholder

# Server port
PORT=3001

# -----------------------------------------------------------------------------
# Stripe Configuration (Billing)
# -----------------------------------------------------------------------------
# Required for billing functionality
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products in Stripe Dashboard first)
# Get from: https://dashboard.stripe.com/test/products
STRIPE_PRICE_PRO=price_test_xxxxx
STRIPE_PRICE_BUSINESS=price_test_xxxxx
